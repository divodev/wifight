################################################################################
# WiFight ISP System - Environment Configuration
# Version: 1.0.0
#
# IMPORTANT: Copy this file to .env and update with your actual values
# Never commit .env file to version control
################################################################################

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
APP_ENV=production

# Application name
APP_NAME="WiFight ISP System"

# Application version
APP_VERSION=1.0.0

# Debug mode (MUST be false in production)
APP_DEBUG=false

# Application URL
APP_URL=https://wifight.local

# Timezone (PHP timezone format)
APP_TIMEZONE=UTC

# Log level: debug, info, notice, warning, error, critical, alert, emergency
LOG_LEVEL=info

# Maintenance mode
MAINTENANCE_MODE=false

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=wifight_isp
DB_USERNAME=wifight
DB_PASSWORD=your_secure_database_password_here

# Root password (for Docker and admin tasks)
DB_ROOT_PASSWORD=your_secure_root_password_here

# Database charset and collation
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# JWT Authentication
# =============================================================================

# JWT secret key (MUST be 32+ characters, randomly generated)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long

# Token expiration (in seconds)
# 3600 = 1 hour, 86400 = 1 day
JWT_EXPIRATION=3600

# Refresh token expiration (in seconds)
# 604800 = 7 days, 2592000 = 30 days
JWT_REFRESH_EXPIRATION=604800

# JWT algorithm (HS256, HS384, HS512, RS256, etc.)
JWT_ALGORITHM=HS256

# =============================================================================
# Redis Cache Configuration
# =============================================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Cache TTL (in seconds)
CACHE_TTL=3600

# Session cache prefix
CACHE_PREFIX=wifight_

# =============================================================================
# RADIUS Server Configuration
# =============================================================================

# RADIUS server settings
RADIUS_SERVER=localhost
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813
RADIUS_SECRET=your_radius_shared_secret

# NAS identifier
RADIUS_NAS_ID=wifight-nas
RADIUS_NAS_IP=192.168.1.1

# =============================================================================
# Network Controller Defaults
# =============================================================================

# MikroTik RouterOS
MIKROTIK_DEFAULT_PORT=8728
MIKROTIK_API_TIMEOUT=30

# TP-Link Omada
OMADA_DEFAULT_PORT=8043
OMADA_API_TIMEOUT=30

# Ruijie Networks
RUIJIE_API_TIMEOUT=30

# Cisco Meraki
MERAKI_API_TIMEOUT=30

# =============================================================================
# Payment Gateway Configuration
# =============================================================================

# Stripe
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_ENABLED=false
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# PayStack (for African markets)
PAYSTACK_ENABLED=false
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Flutterwave
FLUTTERWAVE_ENABLED=false
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=your_encryption_key

# Default payment currency
DEFAULT_CURRENCY=USD

# =============================================================================
# Email Configuration (SMTP)
# =============================================================================

# Email settings
MAIL_ENABLED=false
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@wifight.local
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SMS Configuration
# =============================================================================

# SMS provider: twilio, africastalking, nexmo
SMS_ENABLED=false
SMS_PROVIDER=twilio

# Twilio
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# Africa's Talking
AFRICASTALKING_USERNAME=your_username
AFRICASTALKING_API_KEY=your_api_key
AFRICASTALKING_FROM=YourApp

# =============================================================================
# Security Settings
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://wifight.local

# Rate limiting (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_GLOBAL=100

# Session security
SESSION_SECURE=true
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=true

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Account lockout after failed attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# 2FA (Two-Factor Authentication)
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER="${APP_NAME}"

# =============================================================================
# File Upload Settings
# =============================================================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Upload directory
UPLOAD_DIR=storage/uploads

# =============================================================================
# Backup Configuration
# =============================================================================

# Backup directory
BACKUP_DIR=storage/backups

# Automatic backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# Backup retention (in days)
BACKUP_RETENTION=30

# Backup compression
BACKUP_COMPRESS=true

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Application monitoring
MONITORING_ENABLED=false

# Sentry error tracking
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# Log channels: single, daily, syslog, errorlog
LOG_CHANNEL=daily

# Log rotation (days)
LOG_MAX_FILES=14

# Performance monitoring
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# Third-Party Integrations
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Pusher (for real-time notifications)
PUSHER_ENABLED=false
PUSHER_APP_ID=your_app_id
PUSHER_APP_KEY=your_app_key
PUSHER_APP_SECRET=your_app_secret
PUSHER_APP_CLUSTER=mt1

# =============================================================================
# Development Settings (Only for development environment)
# =============================================================================

# SQL query logging
SQL_LOG_ENABLED=false

# API documentation
API_DOCS_ENABLED=false

# Faker seed (for testing)
FAKER_SEED=1234

# =============================================================================
# Docker Configuration (Only when using Docker)
# =============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=wifight

# Container ports
APP_PORT=8000
DB_PORT=3306
REDIS_PORT=6379
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Grafana (Monitoring)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
FEATURE_REGISTRATION=true
FEATURE_VOUCHERS=true
FEATURE_SUBSCRIPTIONS=true
FEATURE_RADIUS=true
FEATURE_API=true
FEATURE_WEBHOOKS=false

# =============================================================================
# Business Logic Settings
# =============================================================================

# Default session timeout (in minutes)
DEFAULT_SESSION_TIMEOUT=60

# Grace period for expired subscriptions (in days)
SUBSCRIPTION_GRACE_PERIOD=3

# Minimum voucher code length
VOUCHER_CODE_LENGTH=12

# Default bandwidth unit (Kbps, Mbps, Gbps)
BANDWIDTH_UNIT=Mbps

# =============================================================================
# Notes
# =============================================================================
#
# 1. Generate secure random values:
#    - JWT_SECRET: openssl rand -base64 32
#    - RADIUS_SECRET: openssl rand -hex 16
#    - DB_PASSWORD: openssl rand -base64 24
#
# 2. Production checklist:
#    - Set APP_DEBUG=false
#    - Set APP_ENV=production
#    - Use strong, unique passwords
#    - Enable HTTPS (SESSION_SECURE=true)
#    - Configure proper CORS origins
#    - Set up monitoring (MONITORING_ENABLED=true)
#    - Configure backups (BACKUP_SCHEDULE)
#    - Set up email/SMS providers
#    - Configure payment gateways
#
# 3. Security reminders:
#    - Never commit .env to version control
#    - Rotate secrets regularly
#    - Use environment-specific .env files
#    - Restrict file permissions (chmod 600 .env)
#    - Audit access logs regularly
#
################################################################################
